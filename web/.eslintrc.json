{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:vue/vue3-recommended",
        "airbnb-base",
        "@nuxt/eslint-config"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "vue"
    ],
    "settings": {
      "import/resolver": {
        "alias": {
          "map": [["@", "./"]],
          "extensions": [".js", ".vue"]
        }
      }
    },
    "rules": {
        "semi": ["error", "never"],
        "import/no-extraneous-dependencies": [
          "error",
          {
            "devDependencies": ["test/**"],
            "optionalDependencies": false,
            "peerDependencies": false
          }
        ],
        "vue/first-attribute-linebreak": ["error", {
          "singleline": "ignore",
          "multiline": "below"
        }],
        "vue/max-attributes-per-line": ["error", {
          "singleline": {
            "max": 2
          },      
          "multiline": {
            "max": 1
          }
        }]
    }
}
